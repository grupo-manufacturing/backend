# Environment Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h

# CORS / WebSocket
# Comma-separated list of allowed origins (leave empty to use defaults: grupo.in, www.grupo.in, localhost:3000)
# Example: CORS_ALLOWED_ORIGINS=https://grupo.in,https://www.grupo.in,http://localhost:3000
CORS_ALLOWED_ORIGINS=https://grupo.in,https://www.grupo.in,http://localhost:3000
WS_PATH=/socket.io

# Twilio Configuration (REQUIRED for OTP authentication)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=2

# Supabase Configuration (REQUIRED for database operations)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudinary Configuration (REQUIRED for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# WASender API Configuration (OPTIONAL - for WhatsApp notifications)
# Get your API key from https://wasenderapi.com
WASENDER_API_KEY=your_wasender_api_key